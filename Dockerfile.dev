FROM node:22-alpine

WORKDIR /app

# Install dependencies
COPY package.json package-lock.json ./
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Set environment variables for development
ENV NODE_ENV=development
ENV PORT=3001
ENV HOSTNAME="0.0.0.0"

# Start development server
CMD ["npm", "run", "dev"]